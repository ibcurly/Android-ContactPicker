<resources>

    <!-- LIGHT Theme -->
    <style name="ContactPicker_Theme_Light" parent="@style/Theme.AppCompat.Light">
        <item name="cp_textColorPrimary">@color/text_color_primary_dark   </item>
        <item name="cp_textColorSecondary">@color/text_color_secondary_dark</item>

        <item name="cp_badgeLineColor">@color/contact_badge_line_light</item>
        <item name="cp_badgeTriangleColor">@color/contact_badge_triangle_light</item>
        <item name="cp_badgeOverlayColor">@color/contact_badge_overlay_light</item>

        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>


        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>

        <item name="cp_actionIconOK">@drawable/ic_done_white_24dp</item>
        <item name="cp_actionIconCancel">@drawable/ic_close_white_24dp</item>
        <item name="cp_actionIconCheckAll">@drawable/ic_apps_white_24dp</item>
        <item name="cp_actionIconSearch">@drawable/ic_search_white_24dp</item>
    </style>

    <!-- DARK Theme -->
    <style name="ContactPicker_Theme_Dark" parent="@style/Theme.AppCompat">
        <item name="cp_textColorPrimary">@color/text_color_primary_dark</item>
        <item name="cp_textColorSecondary">@color/text_color_secondary_dark</item>

        <item name="cp_badgeLineColor">@color/colorPrimary_dark</item>
        <item name="cp_badgeTriangleColor">@color/colorPrimaryDark_dark</item>
        <item name="cp_badgeOverlayColor">@color/colorPrimaryDark_dark</item>

        <item name="cp_actionIconOK">@drawable/ic_done_white_24dp</item>
        <item name="cp_actionIconCancel">@drawable/ic_close_white_24dp</item>
        <item name="cp_actionIconCheckAll">@drawable/ic_apps_white_24dp</item>
        <item name="cp_actionIconSearch">@drawable/ic_search_white_24dp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColorSecondary">UNCHECKEDCOLOR</item>-->
    </style>


    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Theme_Light" parent="@style/Theme_Light_Base"/>

    <!-- LIGHT Theme -->
    <style name="Theme_Light_Base" parent="@style/ContactPicker_Theme_Dark">
        <!-- ActionBarCompat -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--<item name="backgroundColor">@color/background_light</item>-->

    </style>

</resources>
